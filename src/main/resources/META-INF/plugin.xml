<idea-plugin>
    <id>com.android.tools.idea.diagnostic-plugin</id>
    <name>IDEA platform diagnostics</name>
    <vendor>Google</vendor>
    <description>
        This is meant for developers working on the IDE itself to get
        real-time insight into the performance of their code.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <!-- Used for the PsiElementFinder demo. -->
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                anchor="right"
                id="Diagnostics [internal]"
                factoryClass="com.android.tools.idea.diagnostics.DiagnosticsWindowFactory"/>
    </extensions>

    <application-components>
        <component>
            <implementation-class>com.android.tools.idea.diagnostics.HackForDisablingPluginUnloading</implementation-class>
        </component>
    </application-components>
</idea-plugin>

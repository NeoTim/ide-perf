<idea-plugin>
    <id>com.android.tools.idea.diagnostic-plugin</id>
    <name>IDEA diagnostics</name>
    <vendor>Google</vendor>
    <description>
        This is meant for developers working on the IDE itself to get
        real-time insight into the performance of their code.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <!-- Used for the PsiElementFinder demo. -->
    <depends>com.intellij.modules.java</depends>

    <actions>
        <action text="Tracer..."
                id="com.android.tools.idea.diagnostics.Tracer"
                class="com.android.tools.idea.diagnostics.TracerAction"
                description="Trace IDE code to get overhead measurements and call counts in real time">
            <add-to-group group-id="HelpDiagnosticTools" anchor="after"
                          relative-to-action="Performance.ActivityMonitor"/>
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.android.tools.idea.diagnostics.HackForDisablingPluginUnloading</implementation-class>
        </component>
    </application-components>
</idea-plugin>
